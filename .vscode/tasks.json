{
  "version": "2.0.0",
  "command": "cmd",
  "type": "shell",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": true
  },
  "tasks": [
    {
      "label": "cpp-build",
      "type": "process",
      "command": "${workspaceFolder}\\build_cpp.bat",
      "args": [
        "/Zi",
        "/EHsc",
        "/std:c++17",
        "/Fe:",
        "${fileDirname}\\..\\build\\out.exe",
        "/Fo:",
        "${fileDirname}\\..\\build\\out.obj",
        "${file}"
      ],
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "cpp-build-run",
      "type": "shell",
      "options": { "cwd": "${fileDirname}\\..\\build" },
      "command": "./out.exe",
      "args": ["<", "input.txt"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["cpp-build"]
    },
    {
      "label": "cpp-test",
      "type": "shell",
      "command": "./out.exe",
      "args": ["<", "input.txt"],
      "options": { "cwd": "${fileDirname}\\..\\build" },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "rust-build",
      "type": "process",
      "command": "rustc",
      "args": ["${file}", "-o", "${fileDirname}\\..\\build\\out.exe"],
      "problemMatcher": "$rustc"
    },
    {
      "label": "rust-build-run",
      "type": "shell",
      "options": { "cwd": "${fileDirname}\\..\\build" },
      "command": "./out.exe",
      "args": ["<", "input.txt"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["rust-build"]
    },
    {
      "label": "rust-test",
      "options": { "cwd": "${fileDirname}\\..\\build" },
      "command": "./out.exe",
      "args": ["<", "input.txt"],
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
